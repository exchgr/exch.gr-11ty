---
layout: "main.liquid"
pagination:
  data: collections
  size: 1
  alias: slug
  addAllPagesToCollections: true
  filter:
    - all
    - post
    - posts
    - tagList
eleventyComputed:
  page_title: "{{ collections[slug][0].data.article.attributes.collection.data.attributes.name }}"
permalink: "/{{ slug }}/"
---
{% assign articles = collections[ slug ] %}
{% assign collection = slug | categoryOrTag: articles[0] %}

{% render 'collection',
  collection: collection,
  articles: articles,
  class: "single"
%}
